kind: StorageClass
apiVersion: storage.k8s.io/v1
metadata:
  name: "{{namespace}}-geth"
  labels:
provisioner: kubernetes.io/gce-pd
parameters:
  type: "{{storage_class_parameters_type}}"
  zones: "{{zones | join(',')}}"
---
kind: StorageClass
apiVersion: storage.k8s.io/v1
metadata:
  name: "{{namespace}}-stellar"
  labels:
provisioner: kubernetes.io/gce-pd
parameters:
  type: "{{storage_class_parameters_type}}"
  zones: "{{zones | join(',')}}"
---
{% for zone in zones %}
apiVersion: v1
kind: PersistentVolume
metadata:
  name: "{{namespace}}-stellar-{{zone}}"
  labels:
    zone: "{{zone}}"
    service: "stellar"
spec:
  capacity:
    storage: "{{stellar_storage_capacity}}"
  accessModes:
    - ReadWriteOnce
  persistentVolumeReclaimPolicy: Retain
  storageClassName: "{{namespace}}-stellar"
  gcePersistentDisk:
    fsType: ext4
    pdName: "{{namespace}}-stellar-{{zone}}"
---
apiVersion: v1
kind: PersistentVolume
metadata:
  name: "{{namespace}}-geth-{{zone}}"
  labels:
    zone: "{{zone}}"
    service: "geth"
spec:
  capacity:
    storage: "{{geth_storage_capacity}}"
  accessModes:
    - ReadWriteOnce
  persistentVolumeReclaimPolicy: Retain
  storageClassName: "{{namespace}}-stellar"
  gcePersistentDisk:
    fsType: ext4
    pdName: "{{namespace}}-geth-{{zone}}"
{% if not loop.last %}
---
{% endif %}
{%endfor%}
